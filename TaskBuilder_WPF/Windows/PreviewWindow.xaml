<Window x:Class="TaskBuilder_WPF.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskBuilder_WPF"
        mc:Ignorable="d"
        Title="PreviewWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer  >
            <Canvas Grid.Row="0" Background="LightGreen" Margin="0,0,0,67">
                <TextBlock x:Name="textBlock"></TextBlock>
            </Canvas>
        </ScrollViewer>
        <Button Content="Accept" HorizontalAlignment="Left" Margin="177,0,0,25" VerticalAlignment="Bottom"/>
        <Button Content="Restart" HorizontalAlignment="Left" Margin="532,0,0,25" VerticalAlignment="Bottom" Click="Button_Click_Start2"/>
    </Grid>
</Window>
