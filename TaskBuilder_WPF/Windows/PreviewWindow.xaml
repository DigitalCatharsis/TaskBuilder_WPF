<Window x:Class="TaskBuilder_WPF.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskBuilder_WPF"
        mc:Ignorable="d"
        Title="PreviewWindow" Height="768" Width="1024">
    <Grid>
        <ScrollViewer>
                <TextBlock x:Name="textBlock" TextWrapping="WrapWithOverflow"></TextBlock>
        </ScrollViewer>
        <DockPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
            <Button Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Width="100" Height="30" Click="Button_Click_OpenFile"/>
            <Button Content="Рестарт" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="100" Height="30" Click="Button_Click_Start2"/>
        </DockPanel>
    </Grid>
</Window>
