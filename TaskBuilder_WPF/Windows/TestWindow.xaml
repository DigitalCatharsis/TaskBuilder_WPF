<Window x:Class="TaskBuilder_WPF.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskBuilder_WPF"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="CategoryCollection">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Expander Header="{Binding Path=CategoryName}">
                        <StackPanel Margin="5">
                            <ListBox>
                                <CheckBox DataContext="List.">
                                    <TextBlock FontSize="16" Text="{Binding Path=CategoryContent}" HorizontalAlignment="Center" />
                                </CheckBox>
                            </ListBox>
                        </StackPanel>
                    </Expander>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>